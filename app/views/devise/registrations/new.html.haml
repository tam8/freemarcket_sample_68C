  .box
    .box__header
      %h3 会員情報登録
    .box__form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field__nickname
          = f.label :ニックネーム
          %span 必須
          %br/
          = f.text_field :nickname, autofocus: true, placeholder: "例）フリマ二郎"
        .field__email
          = f.label :Eメール
          %span 必須
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例)###＠gmail.com"
        .field__password
          = f.label :パスワード（６文字以上）
          %span 必須
          - if @minimum_password_length
            -# %em
            -#   (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力"
        .field__confirmation
          = f.label :パスワード確認
          %span 必須
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度入力"
        .field__reference
          %h7.check 本人確認
          %p  安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
        .field__fullname
          = f.label :名前
          %span 必須
          %br/
          %input.input-default.half{:name => "family_name_kanji", :placeholder => "例) フリマ", :type => "text", :value => ""}/
          %input.input-default.half{:name => "family_name_kanji", :placeholder => "例) 二郎", :type => "text", :value => ""}/
        .field__fullname_reading
          = f.label :名前カナ全角
          %span 必須
          %br/
          %input.input-default.half{:name => "family_name_kanji", :placeholder => "例) フリマ", :type => "text", :value => ""}/
